<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Published on</th>
      <% if logged_in? %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.created_at %></td>
        <td><%= render "posts/edit_del_links", post: post %></td>
      </tr>
    <% end %>
  </tbody>
</table>